
@model IEnumerable<MarketplaceServices.ViewModel.UserRoleViewModel>;

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Email</th>
            <th scope="col">RoleName</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>

            <th scope="row">@item.Id</th>
            <td>@item.Email</td>

            <td> @Html.DisplayFor(modelItem => item.RoleName)</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-controller="User" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            
            </td>
        </tr>

        }

    </tbody>

</table>
<div>
    <a class="btn btn-danger" asp-action="Create"> Create Admin</a>
</div>
