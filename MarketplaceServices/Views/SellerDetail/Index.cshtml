@model MarketplaceServices.Models.ApplicationUser;


@* Proooooooofile *@


<div class="main-page second py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 left">
                <div class="profile_info">
                    <div class="seller-card">
                        <div>
                            <div class="user-online-indicator is-online " data-user-id="1152855">
                                <i class="fa fa-circle"></i>online
                            </div>
                        </div>
                        @*<div><a href="#" class="ambassadors-badge">Ambassador</a></div>*@
                        <div class="user-profile-info">
                            <div>
                                <div class="user-profile-image">
                                    <label class="user-pict">
                                        <img src="images/@Model.Image"
                                             class="img-fluid user-pict-img" alt="Askbootstrap">
                                        <a href="#"
                                           class="user-badge-round user-badge-round-med locale-en-us top-rated-seller"></a>
                                    </label>
                                </div>
                            </div>
                            <div class="user-profile-label">
                                <div class="username-line">
                                    <a href="#" class="seller-link">@Html.DisplayFor(x => x.UserName)</a>
                                </div>
                                <div class="oneliner-wrapper">
                                    <small class="oneliner">Professional Voice Actress</small>
                                </div>
                            </div>
                        </div>
                     
                       
                        @*
                            ***************Information****************
                        *@
                        <div class="user-stats-desc">
                            <ul class="user-stats">
                                <li class="location">From<strong>@Html.DisplayFor(x => x.Address)</strong></li>
                                <li class="member-since">Member since<strong>Dec 2012</strong></li>
                                <li class="response-time">Avg. Response Time<strong>2 hours</strong></li>
                                <li class="recent-delivery">Recent Delivery<strong>about&nbsp;15</strong></li>
                            </ul>
                        </div>
                    </div>
                </div>
                @*
                    *************Description**********
                *@
                <div class="seller-profile">

                    <div class="description">

                        <h3 class="d-flex row justify-content-between">
                            Description
                            <a onclick="changeDescription()"> Edit Description</a>
                        </h3>


                        <form method="post">

                            <p id="descriptions">
                                @Html.DisplayFor(x => x.Description)
                            </p>
                           
                            <input id="updateD" class="btn btn-success" style="display:none" type="submit" asp-action="updateDescription" asp-controller="Profile" value="Update" />
                        </form>

                    </div>

                    @*
                        *************Language**********
                    *@
                    <div class="languages">
                        <h3 class="d-flex row justify-content-between">
                            Languages
                            <a class="addnew" onclick="viewlanguage()">Add Language</a>
                        </h3>
                        <div style="display:none" id="AddLanguage">

                           
                        </div>
                        <ul>
                            @foreach (var language in Model.Language)
                            {
                                <li>@language.LanguageName - <span>@language.LanguageLevel</span></li>
                            }


                        </ul>
                    </div>

                    @*
                        *************Skils**********
                    *@
                    <div class="skills">
                        <h3 class="d-flex row justify-content-between">
                            Skills
                            <a class="addnew" id="addnew" onclick="viewskills()">Add Skills</a>

                        </h3>
                   
                        @* ***ListSkills*** *@
                        <ul>
                            @foreach (var skill in Model.Skills)
                            {
                                <li class=""><a href="#">@skill.SkillName</a></li>

                            }
                        </ul>

                    </div>
                </div>
            </div>
            <div class="col-lg-8 right">
                <h3>Make YourService</h3>
                <a asp-action="Create" asp-controller="Services">Click Here</a>
            </div>
        </div>
    </div>
</div>


